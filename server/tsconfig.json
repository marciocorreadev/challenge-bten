{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@bin/*": ["bin/*"],
      "@controllers/*": ["controllers/*"],
      "@database": ["database/index"],
      "@errors/*": ["errors/*"],
      "@middleware/*": ["middleware/*"],
      "@models/*": ["models/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["utils/*"],
      "@validators": ["validators/index"],
      "@routes": ["routes"],
      "@app": ["app"]
    }
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/@types"
  ],
  "include": ["src/**/*"]
}